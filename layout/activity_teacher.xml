<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ccc"
    android:orientation="vertical"
    tools:context=".teacher">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:text="teacher"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/welcomeT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Activities"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="150dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/listeleveBtn"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bgbutton"
                    android:drawableLeft="@mipmap/listenfant"
                    android:text="Listes des enfant"
                    android:onClick="ET"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/ProfilBtn"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bgbutton"
                    android:drawableLeft="@drawable/ic_baseline_fiber_new_24"
                    android:onClick="afiichnws"
                    android:text="news" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/PruchaseBtn"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bgbutton"
                    android:drawableLeft="@mipmap/emploittemps"
                    android:onClick="emploi"

                    android:text="emploit de Temps" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="right|bottom"
                android:layout_marginTop="50dp"
                android:layout_weight="1"
                android:paddingRight="10dp">

                <Button
                    android:id="@+id/LogoutBtn"
                    android:layout_width="128dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bgbutton"
                    android:drawableLeft="@drawable/ic_baseline_exit_to_app_24"
                    android:onClick="logout"
                    android:text="Logout" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>